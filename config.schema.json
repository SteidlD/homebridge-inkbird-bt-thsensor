{
   "pluginAlias": "InkbirdBtTHSensor",
   "pluginType": "accessory",
   "schema": {
     "type": "object",
     "properties": {
         "name": {
            "type": "string",
            "title": "Name of the sensor",
            "required": true
         },
         "model": {
            "type": "string",
            "enum": [ "IBS-TH1", "not in list - try it anyway" ],
            "title": "Model number (i.e. IBS-TH1, leave empty if not sure)",
            "required": true
         },
         "mac_address": {
            "type": "string",
            "title": "Bluetooth MAC address for sensor (xx:xx:xx:xx:xx:xx). If empty first sensor to be found will be used - see log for MAC found.",
            "required": false
         },
         "update_interval": {
            "type": "number",
            "title": "Update interval in seconds",
            "required": false
         }
      }
   }
}
